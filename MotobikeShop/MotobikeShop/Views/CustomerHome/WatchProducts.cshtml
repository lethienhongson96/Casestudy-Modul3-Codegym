@model List<Product>

@inject AppDbContext context;

<div class="container">
    @if (Model.Count != 0)
    {
        <h1 class="mt-4 mb-3">
            @context.Categories.FirstOrDefault(el => el.Id == Model[0].CategoryId).Name
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="CustomerHome">Home</a>
            </li>
            <li class="breadcrumb-item active">@context.Categories.FirstOrDefault(el => el.Id == Model[0].CategoryId).Name</li>
        </ol>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 portfolio-item">
                    <div class="card h-100">
                        <img class="card-img-top" src="~/Images/ProductImages/@item.ImagePath" alt="">
                        <div class="card-body">
                            <p class="text-info" style="text-align:center">@item.Name</p>
                                <div style="text-align: center">
                            <p class="text-info" style="text-align:center">Giá Sản Phẩm: @item.PricePerUnit.ToString("N0")</p>
                            <small>Số Lượng</small><input type="number" class="btn btn-style border-btn text-info" id="@item.Id" style="width:100px" value="1" />
                        </div>
                            <h4 class="card-title" style="text-align:center">
                                <a href="javascript:void(0)" onclick="CustomerCart.AddItem(@item.Id)" class="btn btn-style btn-primary">
                                    Thêm Vào Giỏ Hàng
                                </a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


