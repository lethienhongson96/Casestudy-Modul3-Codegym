@model List<Product>

@inject AppDbContext context;

    <div class="container">

        <h1 class="mt-4 mb-3">
            @context.Categories.FirstOrDefault(el=>el.Id==Model[0].CategoryId).Name
        </h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="CustomerHome">Home</a>
            </li>
            <li class="breadcrumb-item active">@context.Categories.FirstOrDefault(el => el.Id == Model[0].CategoryId).Name</li>
        </ol>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 portfolio-item">
                    <div class="card h-100">
                        <img class="card-img-top" src="~/Images/ProductImages/@item.ImagePath" alt="">

                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="javascript:void(0)" onclick="Cart.AddItem(@item.Id)" class="btn btn-style btn-primary">
                                    Thêm Vào Giỏ Hàng
                                </a>
                                Số lượng <input type="number" class="btn btn-style border-btn" id="@item.Id" style="width:100px" value="1" />
                            </h4>
                            <p class="card-text">Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
