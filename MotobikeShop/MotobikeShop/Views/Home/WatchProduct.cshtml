                            Lorem ipsum dolor sit amet consectetur, adipisicing elit. Accusa ntium corrupti
                            neque sunt labore veritatis.
                        </p>
                        @*<input type="hidden" value="@signInManager.UserManager.GetUserAsync(User).Result.Id" id="UserId" />*@

                        <a href="javascript:void(0)" onclick="Cart.AddItem(@item.Id)" class="btn btn-style btn-primary">
                            Mua Ngay
                        </a>
                        Số lượng <input type="number" class="btn btn-style border-btn" id="@item.Id" style="width:100px" value="1" />
                    </div>
                </div>
            }
            { i++; }
        }
    </div>
</div>

@section Scripts{
    <script src="~/js/Cart.js" asp-append-version="true"></script>
}
