@model List<IdentityRole>
@{
    Layout = "_LayoutAdminPage";
}
<h1>Quản lí phân quyền</h1>
<form method="post" asp-action="AddRole" asp-controller="Role">
    <div class="input-group">
        <input name="rolename" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Role</button>
        </span>
    </div>
    <div asp-validation-summary="All"></div>
</form>
<table class="table table-striped" id="IndexRole">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a href="javascript:void(0)" onclick="Role.Rename('@role.Id')">Rename</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="~/js/Role.js" asp-append-version="true"></script>
}